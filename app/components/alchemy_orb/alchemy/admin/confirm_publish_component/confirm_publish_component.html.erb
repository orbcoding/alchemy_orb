<div class="confirm_publish">

	<div class="confirm_publish-overview">
		<div class="resource_info">

			<% fields.each do |field| %>
				<div class="value<%= ' has-error' if field[:error] %>">
					<label><%= field[:label] %></label>
					<p><%= field[:value] %></p>
				</div>
			<% end %>
		</div>

		<dl>
			help
			<dt>Different screen sizes</dt>
			<dd>

			</dd>
			<% if @page.page_layout == 'blog_post' %>

			<% end %>
		</dl>
	</div>

	<%= form_tag helpers.publish_admin_page_path(@page), {method: :post, class: 'alchemy-dialog-buttons'} do %>
		<button type="button" onclick="window.Alchemy.closeCurrentDialog()" class="cancel secondary"><%= Alchemy.t(:cancel).capitalize %></button>
		<%= button_tag Alchemy.t(:publish).capitalize, class: 'confirm', disabled: fields_error? %>
	<% end %>
</div>
